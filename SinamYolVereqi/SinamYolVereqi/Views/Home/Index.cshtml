 <style>
    .img-opsi {
        background-image: url(/css/aaaaaaaaaaa.jpg);
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
    }
    /* Carousel container height */
    #carouselExampleIndicators {
        height: 520px; /* Carousel yüksekliği */
    }

    /* Carousel item height */
    .carousel-inner .carousel-item img {
        height: 520px; /* Tüm resimlerin aynı yükseklikte olması için */
        width: auto; /* Genişliği otomatik ayarla */
        object-fit: cover; /* Resmi container'a sığdırırken oranları korur */
    }

    /* Carousel controls position */
    .carousel-control-prev,
    .carousel-control-next {
        top: 50%; /* Yatayda dikey merkezleme */
        transform: translateY(-50%); /* Dikeyde yukarı kaydırma */
        width: auto; /* Genişliği otomatik ayarla */
        height: auto; /* Yüksekliği otomatik ayarla */
    }

    .carousel-control-prev {
        left: 0; /* Sol taraftan başlayarak hizala */
    }

    .carousel-control-next {
        right: 0; /* Sağ taraftan başlayarak hizala */
    }

    }

 </style>
   
<section class="w-100 h80 bg-black">
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            @for (int i = 0; i < Model.Cars.Count; i++)
            {
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" @(i == 0 ? "class=active" : "") aria-label="Slide @(i + 1)"></button>
            }
        </div>
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Cars.Count; i++)
            {
                <a asp-route-id="@Model.Cars[i].Id" asp-controller="Home" asp-action="MasinYolVereqi">
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img class="d-block w-100" src="~/RootAllPictures/img/@Model.Cars[i].ImagePath" alt="Car Image @(i+1)">
                    </div>
                </a>
               
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>
<section class="w-100 h-200 white d-flex flex-wrap justify-content-center align-items-center gap-4 p-4">
    @foreach (var car in Model.Cars)
    {
        <div class="card-car align-items-center d-flex flex-column gap-1 p-3 bg-light shadow">
            <img class="w-100 h-50 hvr" src="~/RootAllPictures/img/@car.ImagePath" alt="">
            <b style="font-size: 14px" class="car">@car.Marka.MarkaName</b>
            <button type="button" class="btn btn-outline-success mt-2"><a class="text-decoration-none black" asp-route-id="@car.Id" asp-controller="Home" asp-action="MasinYolVereqi">Etrafli</a></button>
        </div>
    }
</section>
