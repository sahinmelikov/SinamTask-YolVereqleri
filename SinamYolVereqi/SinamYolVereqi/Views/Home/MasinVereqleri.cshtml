@using SinamYolVereqi.Models
@model List<YolSenedi>

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Maşın Vərəqləri</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <h1>Maşın Vərəqləri</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Seriya Nömrəsi</th>
                <th>Marka</th>
                <th>Sahibkarın Adı</th>
                <th>Tehvil Alanın Adı</th>
                <th>Verilme Müddeti</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var yolVereqesi in Model)
            {
                <tr>
                    <td>@yolVereqesi.SeriyaNomresi</td>
                    <td>@yolVereqesi.Marka</td>
                    <td>@yolVereqesi.SahibkarinAdi</td>
                    <td>@yolVereqesi.TehvilAlaninAdi</td>
                    <td>@yolVereqesi.VerilmeMuddeti</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
